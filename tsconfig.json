{
  "compilerOptions": {
      "allowJs": true,
      "declaration": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "lib": ["es2022", "dom"],
      "module": "es2022",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noImplicitReturns": true,
      "noImplicitThis": false,
      "outDir": "dist",
      "resolveJsonModule": true,
      "sourceMap": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "target": "es2022"
  },
  "include": [
      "src/**/*",
      "tests/**/*",
  ]
}
