{
  "compilerOptions": {
      "allowJs": true,
      "declaration": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "lib": ["ESNext", "DOM"],
      "module": "ESNext",
      "moduleResolution": "Node",
      "noImplicitAny": false,
      "noImplicitReturns": true,
      "noImplicitThis": false,
      "outDir": "dist",
      "resolveJsonModule": true,
      "sourceMap": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "target": "ESNext"
  },
  "include": [
      "src/**/*",
      "tests/**/*",
  ]
}
